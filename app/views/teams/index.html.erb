<% if @team.present? %>
  <div class="chat-room">
    <span class="navbar navbar-light bg-light mb-4">
      <div class="container-fluid">
        <%= link_to @team.name, member_team_path(@team), class: "navbar-brand" %>
      </div>
    </span>
    <div id="chats">
      <% @team.chats.each do |chat| %>
        <%= render'chats/chat', chat: chat %>
      <% end %>
    </div>
    <div class="chat-box">
      <%= render 'chats/form', chat: Chat.new, team: @team %>
    </div>
  </div>
<% end %>
