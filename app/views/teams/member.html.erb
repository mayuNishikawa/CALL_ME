<h3><%= @team.name %></h3>

<h3>メンバーを招待する</h3>
<%= form_with(model: :assign, scope: :post, url: team_assigns_path(@team), local: true) do |f| %>
  <div class="input-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control mr-2', placeholder: "emailアドレス" %>
    <div class="input-group-append">
      <%# <button type="submit">追加</button> %>
      <%= f.submit "チーム作成", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>

<h3>メンバー <small><%= @team.members.count %></small></h3>
<% @team.members.each do |member| %>
  <div class="member_container">
    <%= link_to image_tag(member.icon.url), user_path(member.id) %>
    <%= member.nickname %>
  </div>
<% end %>


<%= link_to "チームを編集", edit_team_path(@team) %>
<%= link_to "チームを削除", @team, method: :delete, data:{ confirm: "削除しますか？"} %>
<% if @team.members.ids.include?(current_user.id) %>
  <%= link_to "チームから退出", team_assign_path(@team), method: :delete, data: { confirm: "チームから退出しますか？"} %>
<% end %>