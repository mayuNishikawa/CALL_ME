<p>
  <%= link_to image_tag(@post.user.icon.url),
      user_path(@post.user.id) if @post.user.icon.present? %>
</p>

<p><%= @post.user.nickname %></p>

<p><%= image_tag (@post.image.url) if @post.image.present? %></p>

<p><%= @post.content %></p>

<% if @post.user_id == current_user.id %>
  <p><%= link_to 'edit', edit_post_path(@post), class: "bootstrap_link" %></p>
  <p><%= link_to 'Destroy', @post, method: :delete, data: { confirm: '削除しますか?' }, class: "bootstrap_link" %></p>
<% end %>

<%= link_to '編集', edit_post_path(@post), class: "bootstrap_link" %> |
<%= link_to '戻る', posts_path, class: "bootstrap_link" %>
