<% unless @team.present? %>
  <div class="post-show-room">
    <nav class="nav_bar">
      <span class="name">
        <%= link_to 'Lounge', new_post_path, class: "bootstrap_link_white" %>
      </span>
    </nav>


    <div id="post_show">
      <div class="profile_flex">
        <p>
          <% if @post.user.icon? %>
            <%= link_to image_tag(@post.user.icon.url), user_path(@post.user.id) %>
          <% else %>
            <%= link_to (image_tag "/assets/default_icon.png", size: '50x50'), user_path(@post.user.id) %>
          <% end %>      
        </p>
        <p><%= @post.user.nickname %></p>
        <p><%= image_tag (@post.image.url) if @post.image.present? %></p>
        <p><%= @post.content %></p>
      </div>
      <div class="post_content">
        <% if @post.user_id == current_user.id %>
          <p><%= link_to '編集', edit_post_path(@post), class: "bootstrap_link_black" %></p>
          <p><%= link_to '削除', @post, method: :delete, data: { confirm: '削除しますか?' }, class: "bootstrap_link_black" %></p>
        <% end %>
      </div>
      <div id="comments">
        <%= render 'comments/post_comments', post: @post %>
      </div>
      <div class="comment_form">
        <%= render 'comments/form', post: @post, comment: @comment %>
      </div>
    </div>
  </div>
<% end %>

<%= link_to '戻る', posts_path, class: "bootstrap_link_black" %>