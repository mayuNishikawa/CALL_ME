<% unless @team.present? %>
  <div class="post-show-room">
    <nav class="navbar navbar-light">
      <div class="container-fluid">
        <span class="navbar-brand">Lounge</span>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to '戻る', posts_path, class: "bootstrap_link" %>
          </li>
        </ul>
      </div>
    </nav>

    <div id="post_show">
      <div class="profile_flex">
        <p>
          <%= link_to image_tag(@post.user.icon.url),
              user_path(@post.user.id) if @post.user.icon.present? %>
        </p>
        <p><%= @post.user.nickname %></p>
        <p><%= image_tag (@post.image.url) if @post.image.present? %></p>
        <p><%= @post.content %></p>
      </div>
      <div class="post_content">
        <% if @post.user_id == current_user.id %>
          <p><%= link_to '編集', edit_post_path(@post), class: "bootstrap_link" %></p>
          <p><%= link_to '削除', @post, method: :delete, data: { confirm: '削除しますか?' }, class: "bootstrap_link" %></p>
        <% end %>
      </div>
      <div id="comments">
        <%= render 'comments/post_comments', post: @post %>
      </div>
      <div class="comment_form">
        <%= render 'comments/form', post: @post, comment: @comment %>
      </div>
    </div>
  </div>
<% end %>